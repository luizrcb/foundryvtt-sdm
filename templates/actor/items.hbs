{{! Gear Tab }}
<section class='tab inventory {{tab.cssClass}}' data-group='primary' data-tab='inventory'>
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'></div>
      <div class='item-formula'
      >{{localize 'SDM.InventoryItems'}} [{{@root.itemSlotsTaken}}{{#if (
        ne @root.actor.type 'npc')}}/{{@root.system.item_slots}}{{/if}}]
      </div>
      <div class='item-controls'>
        {{#if @root.editable}}
        <a
          class='item-control item-create'
          title="{{localize 'DOCUMENT.Create' type=(localize 'TYPE.Item' )}}"
          data-action='createDoc'
          data-document-class='Item'
          data-type='gear'
        >
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type=(localize 'TYPE.Item' )}}
        </a>
        {{/if}}
      </div>
    </li>
    {{#each items as |item id|}}
     {{> ($$ "actor/item") item=item }}
    {{/each}}
  </ol>

</section>
