{{! Features Tab }}
<section class='tab inventory scrollable {{tab.cssClass}}' data-group='primary' data-tab='inventory'>
  <div class="grid grid-6col">
    {{#each cargo as |items|}}
    <div class="main grid-span-1">
      <section>
        <ol class='items-list'>
          <li class='item flexrow items-header'>
            <div class='item-name'></div>
            <div class='item-formula'>Sack {{addOne @index}}</div>
            <div class='item-controls'>
              {{#if @root.editable}}
              <a
                class='item-control item-create'
                title="{{localize 'DOCUMENT.Create' type=(localize 'TYPE.Item')}}"
                data-action='createDoc'
                data-document-class='Item'
                data-type='gear'
              >
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type=(localize 'TYPE.Item')}}
              </a>
              {{/if}}
            </div>
          </li>
          {{#each items as |item id|}}
            {{> ($$ "actor/item") item=item actorType=@root.actor.type}}
          {{/each}}
        </ol>
      </section>
    </div>
    {{/each}}
  </div>
</section>
