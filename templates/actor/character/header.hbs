{{! Sheet Character Header }}
<div>
  <header class='sheet-header'>
    <div class="flexcol flex-between flex-center">
      <img class='profile-img' src='{{actor.img}}' data-edit='img' data-action='onEditImage' title='{{actor.name}}'
        height='100' width='100' />
      <div class="flexcol flexrow flex-group-center rollable margin-bottom-10" data-context='rollable' data-action='heroicHealing'>
        <label class='resource-label'>Hero Dice <i class="fas fa-dice-{{system.hero_dice.dice_type}}"></i></label>
        <div class='resource-content flexrow flex-center'>
          {{system.hero_dice.value}} / {{system.hero_dice.max}}
        </div>
      </div>
    </div>
    <div class='header-fields'>
      {{!-- <div class='document-name'> --}}
        <div class="grid grid-4col">
          <div class="grid-span-1">
            <label for="name" class='resource-label'>
              {{localize 'SDM.Actor.Character.FIELDS.name.label'}}
            </label>
            <input name='name' type='text' value='{{actor.name}}' placeholder='Name' />
          </div>
          {{#if (eq actor.type 'character')}}
          <div class="grid-span-1 resources">
            <label for="system.player_experience" class='resource-label'>
              {{localize 'SDM.Actor.Character.FIELDS.player_experience.label'}}
            </label>
            <div class='resource-content flexrow flex-center flex-between'>
              {{#if isGM}}
              <input type='text' name='system.player_experience' value='{{system.player_experience}}'
                data-dtype='Text' />
              {{else}}
              <input type='text' name='system.player_experience' value='{{system.player_experience}}' data-dtype='Text'
                disabled />
              {{/if}}
            </div>
          </div>
          {{/if}}
          <div class="grid-span-1 resources">
            <label for="system.experience" class='resource-label'>
              {{localize 'SDM.Actor.Character.FIELDS.experience.label'}}
            </label>
            <div class='resource-content flexrow flex-center flex-between'>
              {{#if isGM}}
              <input type='text' name='system.experience' value='{{system.experience}}' data-dtype='Text' />
              {{else}}
              <input type='text' name='system.experience' value='{{system.experience}}' data-dtype='Text' disabled />
              {{/if}}
            </div>
          </div>
          <div class="grid-span-1 resources">
            <label for="system.level" class='resource-label'>
              {{localize 'SDM.Actor.Character.FIELDS.level.label'}}
            </label>
            <div class='resource-content flexrow flex-center flex-between'>
              <input type='text' name='system.level' value='{{system.level}}' data-dtype='Number' disabled />
            </div>
          </div>
        </div>
        {{!--
      </div> --}}
      {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. }}
      <div class='resources grid grid-4col'>

        {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
        <div class='resource'>
          {{#if (isCharacter actor.type)}}
          <label for='system.life.max' class='resource-label flex-start'>
            {{localize 'SDM.Actor.base.FIELDS.life.max.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between flex-group-center'>
            <input type='text' name='system.life.value' value='{{system.life.value}}' data-dtype='Number' />
            <span> / </span>
            <input type='text' name='system.life.max' value='{{system.life.max}}' data-dtype='Number' disabled />
          </div>
          {{/if}}
        </div>

        {{#if (eq actor.type 'npc')}}
        <div class='resource flex-group-center'>
          <label class='resource-label'>
            {{localize 'SDM.Actor.NPC.FIELDS.cr.label'}} / {{localize 'SDM.Actor.NPC.xp.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.cr' value='{{system.cr}}' data-dtype='Number' />
            <span></span>
            <input type='text' disabled='true' name='system.xp' value='{{system.xp}}' data-dtype='Number' />
          </div>
        </div>
        {{/if}}

        {{#if (eq actor.type 'character')}}
        <div class='resource'>
          <label for="system.friends" class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.friends.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.friends' value='{{system.friends}}' data-dtype='Text' />
          </div>
        </div>
        {{/if}}

        {{#if (eq actor.type 'character')}}
        <div class='resource'>
          <label for="system.enemies" class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.enemies.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.enemies' value='{{system.enemies}}' data-dtype='Text' />
          </div>
        </div>
        {{/if}}

        {{#if (eq actor.type 'character')}}
        <div class='resource'>
          <label for="system.likes" class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.likes.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.likes' value='{{system.likes}}' data-dtype='Text' />
          </div>
        </div>
        {{/if}}

        {{#if (eq actor.type 'character')}}
        <div class='resource'>
          <label for="system.defense" class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.defense.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <div title="Physical defense">
              <i class="fas fa-shield-alt"></i>
              <span id="system.defense">{{system.defense}}</span>
            </div>
            <div title="Mental defense">
              <i class="fas fa-brain-circuit"></i>
              <span id="system.mental_defense">{{system.mental_defense}}</span>
            </div>
            <div title="Social defense">
              <i class="fas fa-crown"></i>
              <span id="system.social_defense">{{system.social_defense}}</span>
            </div>
          </div>
        </div>
        {{/if}}

        {{#if (eq actor.type 'character')}}
        <div class='resource'>
          <label for="system.save_target" class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.save_target.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.save_target' value='{{system.save_target}}' data-dtype='Number' disabled />
          </div>
        </div>
        <div class='resource'>
          <label class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.species.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.species' value='{{system.species}}' data-dtype='Text' />
          </div>
        </div>
        <div class='resource'>
          <label class='resource-label'>
            {{localize 'SDM.Actor.Character.FIELDS.looks.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input type='text' name='system.looks' value='{{system.looks}}' data-dtype='Text' />
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </header>
  <header class=''>
    <div class="main flexrow flex-group-center">
      <div class='resources grid grid-5col'>
        {{!-- <div class='abilities flexcol'> --}}
          <div class='resources grid grid-3col'>
            {{#each system.abilities as |ability key|}}
            <div class="main grid-span-1">
              <div class='ability flexrow flex-group-center'>
                <span class='resource-label rollable' data-action='roll' data-context='rollable'
                  data-key="{{key}}" data-label='{{localize (lookup @root.config.abilities key)}}' title='{{localize (lookup @root.config.abilities key)}}'>
                  {{toUpperCase (localize (lookup @root.config.abilityAbbreviations key))}}
                </span>
                <input type='text' name='system.abilities.{{key}}.full' value='{{ability.full}}' class="ability-score"
                  data-dtype='Number' />
                <input type='text' name='system.abilities.{{key}}.current' value='{{ability.current}}'
                  class="ability-score" data-dtype='Number' />
                <div class='rollable flexrow' data-roll-type='item' data-action='roll' title="{{localize (lookup @root.config.abilities key)}} saving throw">
                  <i class="fas {{saveIcon key}} saveIcon"></i>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          <div class='resources grid grid-2col'>
            <div class="ability grid-span-1 flexrow">
              <div class='resource-label rollable' data-roll-type='attack' data-action='roll' data-attack="melee">
                <div>{{localize 'SDM.attacks.melee'}}</div>
              </div>
            </div>
            <div class="ability grid-span-1 flexrow">
              <div class='resource-label rollable' data-roll-type='attack' data-action='roll' data-attack="ranged">
                <div>{{localize 'SDM.attacks.ranged'}}</div>
              </div>
            </div>
            <div class="ability grid-span-1 flexrow">
              <div class='resource-label rollable' data-roll-type='attack' data-action='roll' data-attack="fantascience">
                <div>{{localize 'SDM.attacks.fantascience'}}</div>
              </div>
            </div>
            <div class="ability grid-span-1 flexrow">
              <div class='resource-label rollable' data-roll-type='attack' data-action='roll' data-attack="oldtech">
                <div>{{localize 'SDM.attacks.oldtech'}}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
</div>
