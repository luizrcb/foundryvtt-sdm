{{! Gear Tab }}
<section class='tab features {{tab.cssClass}}' data-group='primary' data-tab='features'>
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Name'}}</div>
      <div class='item-formula'>{{localize 'SDM.Item.Gear.FIELDS.rollFormula.label'}}</div>
      <div class='item-controls'>
        {{#if @root.editable}}
          <a
            class='item-control item-create'
            title='{{localize "DOCUMENT.Create" type='Item'}}'
            data-action='createDoc'
            data-document-class='Item'
            data-type='trait'
          >
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='item'}}
          </a>
        {{/if}}
      </div>
    </li>
    {{#each traits as |trait id|}}
      <li
        class='item flexrow'
        data-item-id='{{trait._id}}'
        data-drag='true'
        data-document-class='Item'
      >
        <div class='item-name'>
          <div class='item-image'>
              <img
                src='{{trait.img}}'
                title='{{trait.name}}'
                width='24'
                height='24'
              />
          </div>
          <div >{{trait.name}}</div>
          {{#if trait.system.is_skill}}
            <a class='rollable' data-roll-type='skill' data-action='roll'>
              <img
                src='icons/weapons/swords/sword-simple-white.webp'
                title='{{trait.name}}'
                width='24'
                height='24'
              />
            </a>
          {{/if}}
        </div>
        <div class='item-formula item-prop'>{{trait.system.formula}}</div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Trait'}}'
            data-action='viewDoc'
          >
            <i class='fas fa-edit'></i>
          </a>
          {{#if @root.editable}}
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type='Trait'}}'
              data-action='deleteDoc'
            >
              <i class='fas fa-trash'></i>
            </a>
          {{/if}}
        </div>
      </li>
    {{/each}}
  </ol>

</section>