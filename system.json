{
  "id": "sdm",
  "title": "Synthetic Dream Machine",
  "description": "An unofficial system for playing Ultraviolet Grasslands (UVG) and Our Golden Age (OGA) using the Synthetic Dream Machine (SDM) RPG system.",
  "version": "0.5.4",
  "url": "https://github.com/luizrcb/foundryvtt-sdm",
  "bugs": "https://github.com/luizrcb/foundryvtt-sdm/issues",
  "manifest": "https://raw.githubusercontent.com/luizrcb/foundryvtt-sdm/main/system.json",
