  "compatibility": {
    "minimum": "13",
    "verified": "13.351"
  },
  "authors": [
    {
      "name": "Luber",
      "discord": "nightlybuild_",
      "email": "luizrcb@gmail.com",
      "url": "https://foundryvtt.com/community/luizbertoni"
    }
  ],
  "documentTypes": {
    "Actor": {
      "npc": {
        "htmlFields": ["biography", "notes"]
      },
      "caravan": {
        "htmlFields": ["biography", "notes"]
      },
      "character": {
        "htmlFields": ["biography", "notes"]
      }
    },
    "Item": {
      "gear": {
        "htmlFields": ["description", "features", "powers.element.description"],
        "filePathFields": {
          "powers.value.img": ["IMAGE"]
        }
      },
      "trait": {
        "htmlFields": ["description", "features"]
      },
      "burden": {
        "htmlFields": ["description", "features"]
      }
    }
  },
  "flags": {
    "hotReload": {
      "extensions": ["css", "html", "hbs", "json"],
      "paths": ["css", "lang", "templates"]
    }
  },
  "license": "LICENSE.txt",
  "readme": "README.md",
  "changelog": "CHANGELOG.md",
  "media": [
    {
      "type": "setup",
      "url": "systems/sdm/assets/sdm-compatible.png",
      "thumbnail": "systems/sdm/assets/sdm-compatible.png"
    }
  ],
  "esmodules": ["module/sdm.mjs"],
  "styles": ["css/sdm.css"],
  "languages": [
    {
      "lang": "en",
      "name": "English",
